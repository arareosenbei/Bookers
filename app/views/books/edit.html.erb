

<header>
  <h1>Editing Book</h1>
</header>

<main>
  <%= form_with model: @book, local:true do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>

    <div class="action">
      <%= f.submit 'Update Book' %>
    </div>
    <%= link_to 'Show', "/books/#{@book.id}" %> | <%= link_to 'Back', "/books" %>
  <% end %>
</main>