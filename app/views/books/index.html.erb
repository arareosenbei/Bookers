<span>
    <p>
        <% flash.each do |message_type, message| %>
             <%= message %>
        <% end %>
    </p>
</span>

<header>
    <h1>Books</h1>


</header>


<main>

    <div class="newbook">

        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Body</th>
                    <th colspan="3"></th>
                </tr>

            </thead>
            <tbody>
                <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td> 
                        <%= link_to 'Show', "/books/#{book.id}" %>
                        <%= link_to 'Edit', "/books/#{book.id}/edit" %> 
                        
                        <%= link_to 'Destroy', "/books/#{book.id}", method: :delete, data: { confirm: 'Are you  sure?' } %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>





        <h2><strong>New book</strong></h2>

        <% if @book.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>


        <%= form_with model: @book, local:true do |f| %>
            <div class="field">
                <label>Title</label>
                <%= f.text_field :title %>
            </div>
            <div class="field">
                <label>Body</label>
                <%= f.text_area :body %>
            </div>
            <div class="action">
                <%= f.submit 'Create Book' %>
        <% end %>

    </div>



</main>


<footer></footer>